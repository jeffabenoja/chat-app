{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "outDir": "./server/dist",
    "rootDir": "./server",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true,
    "allowImportingTsExtensions": true
  },
  "include": ["server/src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "client"]
}
